@model LoginModel

@{
    ViewBag.Title = "Login";
}

<div class="d-flex align-items-center justify-content-center vh-100">
    <div class="card opacity-95">
        <div class="card-header">
            <h4 class="text-center">Sign in</h4>
        </div>
        <div class="card-body">
            <div class="text-success mb-3 text-center">@Model?.InfoMessage</div>
            <div class="text-danger mb-3 text-center">@Model?.DangerMessage</div>
            <form asp-action="Login" asp-controller="Account" method="post">
                <div class="form-outline">
                    <input asp-for="Username" class="form-control" required autofocus/>
                    <label asp-for="Username" class="form-label"></label>
                </div>
                <div class="form-text text-danger mb-3">
                    <span asp-validation-for="Username"></span>
                </div>
                <div class="form-outline">
                    <input asp-for="Password" class="form-control" type="password" required/>
                    <label asp-for="Password" class="form-label"></label>
                </div>
                <div class="form-text text-danger mb-3">
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="text-center mb-3">
                    <button class="btn btn-primary btn-lg" type="submit">Sign in</button>
                </div>
            </form>
            <div class="text-center">
                <a class="btn btn-link" asp-action="SignUp">Create an account</a>
            </div>
        </div>
    </div>
</div>