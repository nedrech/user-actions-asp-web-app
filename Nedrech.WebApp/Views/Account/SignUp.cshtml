@model SignupModel

@{
    ViewBag.Title = "Sign Up";
}

<div class="d-flex align-items-center justify-content-center vh-100">
    <div class="card opacity-95">
        <div class="card-header">
            <h4 class="text-center">Sign up</h4>
        </div>
        <div class="card-body">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <form asp-action="SignUp" asp-controller="Account" method="post">
                <div class="form-outline">
                    <input asp-for="Username" class="form-control" required autofocus />
                    <label asp-for="Username" class="form-label"></label>
                </div>
                <div class="form-text text-danger mb-3">
                    <span asp-validation-for="Username"></span>
                </div>
                <div class="form-outline mb-3">
                    <input asp-for="Email" class="form-control" type="email" required/>
                    <label asp-for="Email" class="form-label"></label>
                </div>
                <div class="form-outline mb-3">
                    <input asp-for="Password" class="form-control" type="password" required/>
                    <label asp-for="Password" class="form-label"></label>
                </div>
                <div class="form-outline mb-3">
                    <input class="form-control" type="password" id="ConfirmPassword" required/>
                    <label class="form-label">Confirm password</label>
                </div>
                <div class="text-center mb-3">
                    <button class="btn btn-primary" type="submit">Sign up</button>
                </div>
            </form>
            <div class="text-center">
                <a class="btn btn-link" asp-action="Login">Return to login page</a>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
const password = document.getElementById("Password")
  , confirm_password = document.getElementById("ConfirmPassword");

function validatePassword(){
  if(password.value !== confirm_password.value) {
    confirm_password.setCustomValidity("Passwords don't match.");
  } else {
    confirm_password.setCustomValidity('');
  }
}

password.onchange = validatePassword;
confirm_password.onkeyup = validatePassword;
</script>